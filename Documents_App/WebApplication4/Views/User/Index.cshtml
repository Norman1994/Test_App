@model IEnumerable<WebApplication4.Entites.Users>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Добавить нового пользователя</a>
</p>
<table class="table">
    <tr>
        <th>
            Имя пользователя
        </th>
        <th>
            Название таблицы
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdUser" onclick="return confirm('Are sure wants to delete?');">Удалить пользователя</a>
            </td>
        </tr>
    }
</table>