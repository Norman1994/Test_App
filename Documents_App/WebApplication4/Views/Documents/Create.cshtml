
@model WebApplication4.Entites.Documents

@{
    ViewData["Title"] = "Create";
}

<h2>Создание документа</h2>

<form asp-action="Create" asp-controller="Documents" method="post" enctype="multipart/form-data">
    <p>
        <label>Введите Название документа (с указанием типа файла)</label>
        <input name="DocumentName" class="form-control" pattern="[A-Za-zА-Яа-яЁё]+\.{1}[A-Za-zА-Яа-яЁё]+" required />
    </p>
    <p>
        <label>Добавьте Файл</label>
        <input name="Contents" type="file" class="form-control" />
    </p>
    <p>
        <label>Введите Входящий номер документа</label>
        <input name="DocumentIntroNumber" class="form-control" />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>

<div>
    <a asp-action="Index">Вернуться к таблице!</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}